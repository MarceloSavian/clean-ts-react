{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "DOM.Iterable",
            "ESNext"
        ],
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "rootDir": "src",
        "baseUrl": "src",
        "allowJs": true,
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": [
        "src"
    ]
}